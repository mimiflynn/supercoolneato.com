
extends layout

block append twitter
  meta(name='twitter:title', content=locals.name + ' | ' + page.title)
  if page.metadata.summary
    meta(name='twitter:description', content=page.metadata.summary)
  else
    meta(name='twitter:description', content=page.intro)

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + ' - '}

block header
  p.date
    span= moment.utc(page.date).format('DD. MMMM YYYY')
  h1= page.title

block content
  article.article
    section.content!= typogr(page.html).typogrify()

